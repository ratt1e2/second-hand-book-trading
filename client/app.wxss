/* 全局样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f7fa;
  font-size: 14px;
  color: #333;
}

.container {
  padding: 16rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #409EFF;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  padding: 16rpx;
  font-size: 16px;
}

.btn-default {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  text-align: center;
  padding: 16rpx;
  font-size: 16px;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

/* 图片样式 */
.img-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 价格样式 */
.price {
  color: #f56c6c;
  font-size: 18px;
  font-weight: bold;
}

/* 辅助文字样式 */
.aux-text {
  color: #999;
  font-size: 12px;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 16rpx 0;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 12px;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

/* 搜索框样式 */
.search-bar {
  background-color: #f5f7fa;
  padding: 10rpx 16rpx;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 14px;
}

/* 轮播图样式 */
.swiper {
  width: 100%;
  height: 300rpx;
  margin-bottom: 16rpx;
}

.swiper-item {
  width: 100%;
  height: 100%;
}
