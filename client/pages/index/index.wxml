<view class="container">
  <!-- 搜索框 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索书籍、作者" bindinput="onSearchInput" bindconfirm="onSearch" />
    <view class="search-btn" bindtap="onSearch">搜索</view>
  </view>
  
  <!-- 轮播图 -->
  <view class="swiper-container">
    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500">
      <swiper-item wx:for="{{banners}}" wx:key="index" class="swiper-item">
        <image src="{{item.imageUrl}}" mode="aspectFill" class="img-cover" />
      </swiper-item>
    </swiper>
  </view>
  
  <!-- 分类导航 -->
  <view class="category-nav">
    <view class="category-item" wx:for="{{categories}}" wx:key="index" bindtap="navigateToCategory" data-id="{{item.id}}">
      <view class="category-icon">{{item.name.charAt(0)}}</view>
      <text class="category-name">{{item.name}}</text>
    </view>
  </view>
  
  <!-- 最新上架 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">最新上架</text>
      <text class="section-more" bindtap="navigateToMore" data-type="new">查看更多</text>
    </view>
    <view class="book-list">
      <view class="book-item" wx:for="{{newBooks}}" wx:key="index" bindtap="navigateToBookDetail" data-id="{{item.id}}">
        <image src="{{item.coverImage || 'https://via.placeholder.com/160x240'}}" mode="aspectFill" class="book-cover" />
        <view class="book-info">
          <text class="book-title">{{item.title}}</text>
          <text class="book-author">{{item.author}}</text>
          <view class="book-bottom">
            <text class="price">¥{{item.price}}</text>
            <text class="aux-text">{{getConditionText(item.condition)}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 热门推荐 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">热门推荐</text>
      <text class="section-more" bindtap="navigateToMore" data-type="hot">查看更多</text>
    </view>
    <view class="book-list">
      <view class="book-item" wx:for="{{hotBooks}}" wx:key="index" bindtap="navigateToBookDetail" data-id="{{item.id}}">
        <image src="{{item.coverImage || 'https://via.placeholder.com/160x240'}}" mode="aspectFill" class="book-cover" />
        <view class="book-info">
          <text class="book-title">{{item.title}}</text>
          <text class="book-author">{{item.author}}</text>
          <view class="book-bottom">
            <text class="price">¥{{item.price}}</text>
            <text class="aux-text">{{getConditionText(item.condition)}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
