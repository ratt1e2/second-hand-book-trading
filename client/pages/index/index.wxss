/* index.wxss */

/* 搜索框样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 10rpx 16rpx;
  background-color: #f5f7fa;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 14px;
  margin-right: 16rpx;
}

.search-btn {
  color: #409EFF;
  font-size: 14px;
}

/* 轮播图样式 */
.swiper-container {
  margin-bottom: 24rpx;
}

.swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

/* 分类导航样式 */
.category-nav {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f9eb;
  color: #67c23a;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 12px;
  color: #666;
}

/* 区块样式 */
.section {
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 12px;
  color: #999;
}

/* 书籍列表样式 */
.book-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.book-item {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

.book-cover {
  width: 100%;
  height: 240rpx;
}

.book-info {
  padding: 12rpx;
}

.book-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: 12px;
  color: #999;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: #f56c6c;
  font-size: 16px;
  font-weight: bold;
}

.aux-text {
  font-size: 12px;
  color: #999;
}
